{
  "name": "text_binary_classification",
  "n_gpu": 1,
  "model_arch": {
    "type": "RnnAttentionModel",
    "args": {
      "rnn_type": "rnn",
      "hidden_dim": 256,
      "output_dim": 1,
      "n_layers": 2,
      "bidirectional": true,
      "dropout": 0,
      "batch_first": true,
      "freeze": true
    }
  },
  "dataset": {
    "type": "WeiboDataSet",
    "args": {
      "data_dir": "data/weibo",
      "data_name": "weibo_senti_100k.csv",
      "word_embedding_path": "data/word_embedding/sgns.sogou.char"
    }
  },
  "data_loader": {
    "type": "DataLoader",
    "args": {
      "batch_size": 128,
      "shuffle": true
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": [
    "binary_crossentropy_loss"
  ],
  "metrics": [
    "binary_accuracy"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "saved": "saved/rnn_attention",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}
