{
  "name": "text_binary_classification",
  "n_gpu": 1,
  "model_arch": {
    "type": "TextCNN1d",
    "args": {
      "n_filters": 100,
      "filter_sizes": [
        3,
        4,
        5
      ],
      "dropout": 0.5,
      "output_dim": 10,
      "freeze": true
    }
  },
  "dataset": {
    "type": "CnewsDataset",
    "args": {
      "data_dir": "data/cnews",
      "train_name": "cnews.train.txt",
      "valid_name": "cnews.val.txt",
      "test_name": "cnews.test.txt",
            "max_sent_len": 2000,
      "word_embedding_path": "data/word_embedding/sgns.sogou.char"
    }
  },
  "data_loader": {
    "type": "DataLoader",
    "args": {
      "batch_size": 128,
      "shuffle": true
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": [
    "crossentropy_loss"
  ],
  "metrics": [
    "categorical_accuracy"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "saved": "saved/text_cnn_1d",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}
